%h1="Sign Up"

.span8
  = form_for @user do |f|
    .formContents
      - if @user.errors.any?
        .alert-message.block-message.error
          %h2="Please resolve issues"
          %ul
            - for message in @user.errors.full_messages
              %li= message
      .clearfix
        = f.label :email
        .input
          = f.text_field :email
      .clearfix
        = f.label :password
        .input
          = f.password_field :password
      .clearfix
        = f.label :password_confirmation
        .input
          = f.password_field :password_confirmation
      .actions
        = f.submit :value => "Sign up!", :class => "btn primary"