= hidden_field_tag :direction, params[:direction]
= hidden_field_tag :sort, params[:sort]
.songListView
  .listHeaderSection
    .mediaTitle=  sortable "title"
    .trackNumber= "Track"
    .length= "Length"
    .albumName= sortable "album"
    .artistName= sortable "artist"
    .playCount= sortable "playcount", "Plays"
    .mediaRating= "Rating"
    .listItemActions= "Actions"
  - @songs.each do |song|
    = render :partial => "songs/listEntry", :locals => { :song => song }
.pagination
  = will_paginate @songs
  = page_entries_info @posts